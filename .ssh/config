# github doesn't like local command execution... ie git checkins fail
Host !github.com *
     PermitLocalCommand yes
     LocalCommand if [[ $TERM == screen* ]]; then printf "\033k%h\033\\"; fi

ServerAliveInterval 30
ServerAliveCOuntMax 4
